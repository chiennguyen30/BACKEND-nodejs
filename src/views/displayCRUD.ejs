<!DOCTYPE html>
<html>
  <style>
    table,
    th,
    td {
      border: 1px solid black;
      border-collapse: collapse;
    }
  </style>
  <body>
    <a href="/add-user">Add a user</a>
    <table style="width: 100%">
      <tr>
        <th>id</th>
        <th>email</th>
        <th>first name</th>
        <th>last name</th>
        <th>address</th>
        <th>phone</th>
        <th>action</th>
      </tr>
      <% for(var i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].id %></td>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td><%= dataTable[i].phoneNumber %></td>
        <td style="text-align: center">
          <a href="/edit?id=<%= dataTable[i].id %>" type="button">Edit</a>
          <a href="/delete?id=<%= dataTable[i].id %>" type="button">Delete</a>
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
